JAVASCRIPT:
const headers = document.querySelectorAll('.accordion-header');

headers.forEach(header => {
    header.addEventListener('click', () => {
        const content = header.nextElementSibling;
        if (content.style.display === 'block') {
            content.style.display = 'none';
        } else {
            content.style.display = 'block';
        }
    });
});


document.getElementById('downloadResume').addEventListener('click', function() {
    const resumeContent = `
        My Resume:
            INTERESTS:
                1.Designing a webpage
                2.Drawing
            SKILLS:
                1.Communication Skills
                2.LeaderShip Skills
                3.Analytical Skills
            EDUCATION:
                Persuing,Bachelor of Science in Computer Science,Dr.Mahalingam College Of Enginnering And Technology (2nd year)</p>
                Objective is to Become a Professional Web Developer
            PROJECTS:
                1.HTML,CSS:Created a Website for Bakery Named "HEAVENLY DELIGHTS"
                2.HTML,CSS,JAVACRIPT:Created Simple Calculator
                3.HTML,CSS,JAVASCRIPT:Created Image Gallery
                4.HTML,CSS,JAVASCRIPT:Created MY PORTFOLIO
            COURSES:
                Front-End delopment by codetech and by Mayuran Academy
            CERTIFICATIONS:
                 1.linguaskill
                 2.ICT youth talk(regional prefinals)
                
            LINKDIN:
            
                https://www.linkedin.com/in/sudharma-p-24455a2a1?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=android_app
            GITHUB:
                https://www.linkedin.com/in/sudharma-p-24455a2a1?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=android_app
    
    `;

   
    const blob = new Blob([resumeContent], { type: 'text/plain' });
    const url = URL.createObjectURL(blob);

    const a = document.createElement('a');
    a.href = url;
    a.download = 'resume.txt'; 
    document.body.appendChild(a);
    a.click();

   
    document.body.removeChild(a);
});

